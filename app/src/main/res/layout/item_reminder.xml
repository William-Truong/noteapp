<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_reminder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/ckFinish"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:button="@drawable/custom_checkbox"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|right">
            <TextView
                android:id="@+id/title_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/desctiption_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/title_reminder"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/datetime_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgound_editext"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"

                app:layout_constraintTop_toBottomOf="@id/desctiption_reminder"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>






</LinearLayout>