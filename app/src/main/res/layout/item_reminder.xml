<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_reminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_item_note"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">


    <CheckBox
        android:id="@+id/ckFinish"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/liner1"
        android:gravity="center_vertical"
        android:button="@drawable/custom_checkbox"
         />

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ckFinish"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/desctiption_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/datetime_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>